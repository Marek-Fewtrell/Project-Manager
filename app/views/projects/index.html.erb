<h2>Projects</h2>
<br>
<% if current_user.admin? %>
  <%= link_to "Create New Project", new_project_path %><br>
<% end %>
<br>
<table class="tableCSS">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>More Info</th>
  </tr>
<% @projects.each do |p| %>
  <tr>
    <td><%= p.title %></td>
    <td><%= p.description %></td>
    <td><%= link_to 'More Project', project_path(p) %></td>
  </tr>
<% end %>

</table><br>
